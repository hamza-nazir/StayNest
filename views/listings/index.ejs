<% layout('layouts/boilerplate') -%>
  
<% if (success && success.length) { %>
  <div class="alert alert-primary alert-dismissible mt-3 col-md-6 offset-md-3 text-center">
    <%= success %>
    <button class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (failure && failure.length) { %>
  <div class="alert alert-danger alert-dismissible mt-3 col-md-6 offset-md-3 text-center">
    <%= failure %>
    <button class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h2 class="fw-light mb-0">Explore Listings</h2>
      <hr class="mt-2 mb-4">
    </div>
  </div>
  
  <div class="row g-4">
    <% for(let listing of allListings){ %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 shadow-sm border-0 overflow-hidden">
          <div class="position-relative overflow-hidden" style="height: 200px;">
            <img src="<%= listing.image.url %>" class="card-img-top h-100 w-100 object-fit-cover" alt="<%= listing.title %>">
            <div class="position-absolute bottom-0 end-0 bg-white px-2 py-1 m-2 rounded-pill shadow-sm">
              <small class="text-success fw-bold">$<%= listing.price.toLocaleString('en-US') %>/night</small>
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title text-truncate"><%= listing.title %></h5>
            <p class="card-text text-muted line-clamp-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
              <%= listing.description %>
            </p>
          </div>
          <div class="card-footer bg-transparent border-top-0">
            <button class="btn btn-outline-primary w-100">View Details</button>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

<style>
  .card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }
  .object-fit-cover {
    object-fit: cover;
  }
</style>